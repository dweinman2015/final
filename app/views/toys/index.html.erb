<p>
<%= link_to "New Toy", new_toy_path, class: 'btn btn-sm btn-success' %></p>
<p>
<table class="table table-bordered">
<% @toys.each do |toy| %>
  <tr>
  <td><%=link_to toy.id, toy_path(toy)%></td>
