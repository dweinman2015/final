<h3><%=link_to "Edit Toy",edit_toy_path(@toy)%></h3><br>
<h3><%=link_to "Back to the list of Toys", toys_path%></h3>
<br>

<table class="table table-hover">
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  <tr>

  <tr>
    <td>id</td>
    <td><%=@toy.id%></td>
  </tr>

  <tr>
    <td>name</td>
    <td><%=@toy.name%></td>
  </tr>

  <tr>
    <td>short_description</td>
    <td><%=@toy.short_description%></td>
  </tr>

  <tr>
    <td>long_description</td>
    <td><%=@toy.long_description%></td>
  </tr>

  <tr>
    <td>link_to_buy</td>
    <td><%=link_to "Amazon", @toy.link_to_buy%></td>
  </tr>

  <tr>
    <td>brand</td>
    <td><%=@toy.brand%></td>
  </tr>

  <tr>
    <td>good_for</td>
    <td>
      <li><input type="checkbox"> Xtra Small Dogs</li>
      <li><input type="checkbox"> Small Dogs</li>
      <li><input type="checkbox"> Medium Dogs</li>
      <li><input type="checkbox"> Large Dogs</li>
      <li><input type="checkbox"> Xtra Large Dogs</li>
      <li><%=@toy.good_for%></li>
    </td>
  </tr>

  <tr>
    <td>toy review</td>
    <td><%=@toyreview.review%></td>
  </tr>

  <tr>
    <td>durability</td>
    <td><%=@toy.durability%></td>
  </tr>

  <tr>
    <td>Toyfeatures</td>
    <td><%=@toyfeature.feature1%><br> 
    <%=@toyfeature.feature2%><br>
    <%=@toyfeature.feature3%><br>
    <%=@toyfeature.feature4%><br>
    <%=@toyfeature.feature5%><br>
    </td>
  </tr>

  <tr>
    <td>This dog loves this toy</td>
    <td><%=@dogsfavorite.name%> owned by <%=User.find_by(dog_id1: @dogsfavorite.id).username%>
    </td>
  </tr>
</table>
